@model PraksaProjekat.Models.WorkingHoursViewModel

<div class="panel panel-heading">
    <div class="row">
        <div class="col-md-12 ">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Add your working hours</h4>
                    <hr />
                    @Html.ValidationSummary(true)
                    @if (!String.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="col-lg-12">
                            <div class="alert alert-dismissible alert-success">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                @ViewBag.Message
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        @Html.LabelFor(m => m.Hours, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.Hours, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Hours)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Date, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.Date, new { @class = "form-control input-group date" })
                            @Html.ValidationMessageFor(m => m.Date)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>